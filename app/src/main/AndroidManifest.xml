<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Network for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- (Optional, for older devices with BiometricPrompt) -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginTemp">


        <activity
            android:name=".ActivityLauncher"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Onboarding screens -->
        <activity android:name=".ActivityGetStarted1" android:exported="false" />
        <activity android:name=".ActivityGetStarted2" android:exported="false" />
        <activity android:name=".ActivityGetStarted3" android:exported="false" />
    <activity android:name=".ActivityLanding" />
    <activity android:name=".ActivityGetMeal1" />


        <!-- Landing (Sign In / Sign Up) -->
        <activity
            android:name=".ui.auth.LandingActivity"
            android:exported="false" />

        <!-- Auth screens -->
        <activity android:name=".ui.auth.LoginActivity" android:exported="false" />
        <activity android:name=".ui.auth.RegisterActivity" android:exported="false" />
        <activity android:name=".ui.auth.FingerprintActivity" android:exported="false" />

        <!-- Main app host -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- (Removed: duplicate/unused) -->
        <!-- <activity android:name=".ActivityLanding" /> -->
        <!-- <activity android:name=".ActivityGetMeal1" />  (keep only if used elsewhere) -->

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>
