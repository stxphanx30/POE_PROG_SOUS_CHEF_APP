<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:height="34dp" android:width="60dp"/>
            <corners android:radius="40dp"/>
            <solid android:color="@color/sous_chef_orange"/>
            <stroke android:width="2dp" android:color="@color/sous_chef_orange"/>
            <!-- Add padding so the thumb sits inside neatly -->
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <size android:height="34dp" android:width="60dp"/>
            <corners android:radius="40dp"/>
            <solid android:color="#E6E6E6"/>
            <stroke android:width="2dp" android:color="#E6E6E6"/>
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/>
        </shape>
    </item>

</selector>