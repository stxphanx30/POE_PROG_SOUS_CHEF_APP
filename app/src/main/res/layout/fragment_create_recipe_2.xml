<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Flèche retour (fixée en haut) -->

    <!-- Titre + step (en haut) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/createrecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/dm_sans_bold"
            android:text="@string/create_recipe"
            android:textColor="#FE8417"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Barre de progression -->
    <ImageView
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_21"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Zone scrollable : tout le contenu principal dedans -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/bar"
        app:layout_constraintBottom_toTopOf="@id/buttonBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="16dp"
            android:background="@color/white"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/step11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/add_ingredients_title"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/step12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/follow_instructions_below"
                android:textColor="@color/sous_chef_orange"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/step_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/step_click_add_ingredient"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/step_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/step_write_ingredient"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/step_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/step_click_add"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/step_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/step_ingredient_added"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/step_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/step_ingredients_displayed"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/step_imag2e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/step_repeat_until_done"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp"/>


            <TextView
                    android:id="@+id/step_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/recipe_instructions"
                    android:textSize="14sp"
                    android:textColor="#A4A4A4"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/group_23" />

            <!-- Ingredients box -->
            <LinearLayout
                android:id="@+id/boxIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ingredients_box"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:padding="0dp">

                <!-- Titre -->
                <TextView
                    android:id="@+id/labelIngredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:text="@string/ingredients_label"
                    android:textColor="@color/sous_chef_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Petite ligne sous le titre -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:alpha="0.6"/>

                <!-- Zone scrollable -->
                <ScrollView
                    android:id="@+id/scrollIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                android:fillViewport="true"
                android:padding="12dp"

                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:scrollbarThumbVertical="@drawable/scrollbar_thumb_orange"
                android:scrollbarTrackVertical="@drawable/scrollbar_track_gray"
                android:scrollbarStyle="outsideInset">

                <TextView
                    android:id="@+id/tvIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_900"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"/>
            </ScrollView>
        </LinearLayout>



    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Barre de boutons fixée en bas -->
    <LinearLayout
        android:id="@+id/buttonBar"
        style="?android:attr/buttonBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btncancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="102dp"
            android:layout_height="46dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/shape_btn_primary_states_red"
            android:fontFamily="@font/dm_sans_bold"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="#FF0000"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/btnnext"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="102dp"
            android:layout_height="46dp"
            android:background="@drawable/bg_btn_primary_orange"
            android:fontFamily="@font/dm_sans_bold"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/text_primary_btn_colors"
            android:textSize="13sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
