<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Flèche retour (fixée en haut) -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="2dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"/>

    <!-- Titre + step (en haut) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/createrecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/dm_sans_bold"
            android:text="@string/create_recipe"
            android:textColor="#FE8417"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="@string/step_1"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Barre de progression -->
    <ImageView
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectanglestep1"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Zone scrollable : tout le contenu principal dedans -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/bar"
        app:layout_constraintBottom_toTopOf="@id/buttonBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/step11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/add_recipe_name_and_image"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/step12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/follow_instructions_below"
                android:textColor="@color/sous_chef_orange"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/step_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/fill_fields"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/step_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/give_recipe_name"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/step_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/date_of_creation"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/step_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/select_category"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/step_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/add_image_instruction"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/step_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/recipe_instructions"
                    android:textSize="14sp"
                    android:textColor="#A4A4A4"/>
            </LinearLayout>

            <!-- RECIPE NAME -->
            <TextView
                android:id="@+id/recipename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/recipe_name_title"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/etrecipename"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_field_outline"
                android:hint="@string/recipe_name_hint"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/field_pad_h"
                android:paddingTop="@dimen/field_pad_v"
                android:paddingEnd="@dimen/field_pad_h"
                android:paddingBottom="@dimen/field_pad_v"
                android:textColor="@color/black_900"
                android:textColorHint="@color/gray_400"
                android:textSize="16sp"/>

            <!-- CATEGORY -->
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/category_title"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/etCategory"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_field_outline"
                android:hint="@string/category_hint"
                android:inputType="none"
                android:focusable="false"
                android:textColor="@color/black_900"
                android:textColorHint="@color/gray_400"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_chevron_down_24"
                android:drawablePadding="12dp"
                android:popupBackground="@drawable/bg_dropdown_panel"
                android:dropDownHeight="wrap_content"
                android:dropDownVerticalOffset="8dp"
                android:paddingStart="@dimen/field_pad_h"
                android:paddingTop="@dimen/field_pad_v"
                android:paddingEnd="@dimen/field_pad_h"
                android:paddingBottom="@dimen/field_pad_v"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/cooking_time"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/ettime"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_field_outline"
                android:hint="@string/eg_15"
                android:inputType="number"
                android:focusable="false"
                android:clickable="true"
                android:drawableEnd="@drawable/group_21__1_"
                android:drawablePadding="12dp"
                android:paddingStart="@dimen/field_pad_h"
                android:paddingTop="@dimen/field_pad_v"
                android:paddingEnd="@dimen/field_pad_h"
                android:paddingBottom="@dimen/field_pad_v"
                android:textColor="@color/black_900"
                android:textColorHint="@color/gray_400"
                android:textSize="16sp"/>




            <!-- ADD IMAGE -->
            <TextView
                android:id="@+id/addimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/add_image_title"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@drawable/shape_btn_light_states"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/upload_file"
                android:textAllCaps="false"
                android:textColor="@color/text_primary_btn_colors"
                android:textSize="16sp"
                android:layout_marginTop="6dp"/>

            <LinearLayout
                android:id="@+id/fileRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/btnClearFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✕"
                    android:textSize="18sp"
                    android:textColor="@color/black_900"
                    android:paddingEnd="6dp"/>

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/file_example_name"
                    android:textColor="#A4A4A4"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Barre de boutons fixée en bas -->
    <LinearLayout
        android:id="@+id/buttonBar"
        style="?android:attr/buttonBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btncancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="102dp"
            android:layout_height="46dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/shape_btn_primary_states_red"
            android:fontFamily="@font/dm_sans_bold"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="#FF0000"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/btnnext"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="102dp"
            android:layout_height="46dp"
            android:background="@drawable/bg_btn_primary_orange"
            android:fontFamily="@font/dm_sans_bold"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/text_primary_btn_colors"
            android:textSize="13sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
