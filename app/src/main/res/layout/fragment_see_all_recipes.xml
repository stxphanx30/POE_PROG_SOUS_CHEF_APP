<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">
    <ImageButton
        android:id="@+id/arrowback"
        style="@style/OrangeBackButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/back" />
    <!-- ðŸ”¸ Title -->
    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Lets Try This Out"
        android:textColor="#FE8417"
        android:textSize="18sp" />
    <!-- ðŸ”¸ Search bar (reuse same view as recipes) -->
    <include
        layout="@layout/view_search_bar"
        android:id="@+id/searchBar" />
    <!-- RecyclerView for all recipes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipesRecycler"
        android:layout_width="match_parent"
        android:layout_height="542dp"
        android:clipToPadding="false"
        android:paddingTop="8dp" />

</LinearLayout>
