<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Image + overlay + back -->
    <RelativeLayout
        android:id="@+id/headerImageContainer"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mealImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <!-- lÃ©ger overlay gradient -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_overlay" />

        <!-- Back button circle white icon -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:padding="10dp"
            android:background="@drawable/group_32"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <!-- center texts over image -->
        <LinearLayout
            android:id="@+id/overlayTexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="84dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/mealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_bold"
                android:gravity="center"
                android:text="@string/recipe_name"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mealIngredientsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Ingredients: 0"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mealDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="0 min"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Scroll content with bullets boxes -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerImageContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="24dp"> <!-- espace bas pour confort -->

            <!-- Ingredients box -->
            <LinearLayout
                android:id="@+id/boxIngredients"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/bg_ingredients_box"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="0dp">

                <TextView
                    android:id="@+id/labelIngredients1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:text="@string/ingredients_label"
                    android:textColor="@color/sous_chef_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:alpha="0.6"/>

                <ScrollView
                    android:id="@+id/scrollIngredients1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:fadeScrollbars="false"
                    android:fillViewport="true"
                    android:padding="12dp"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbarThumbVertical="@drawable/scrollbar_thumb_orange"
                    android:scrollbarTrackVertical="@drawable/scrollbar_track_gray"
                    android:scrollbars="vertical"
                    android:nestedScrollingEnabled="true"
                    android:focusableInTouchMode="true"
                    android:overScrollMode="ifContentScrolls">

                    <TextView
                        android:id="@+id/ingredientsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_sans_light"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/black_900"
                        android:textSize="15sp" />
                </ScrollView>
            </LinearLayout>

            <!-- Steps box -->
            <LinearLayout
                android:id="@+id/boxsteps"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/bg_ingredients_box"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:padding="0dp">

                <TextView
                    android:id="@+id/labelSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:text="@string/steps_label"
                    android:textColor="@color/sous_chef_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:alpha="0.6"/>

                <ScrollView
                    android:id="@+id/scrollsteps"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:fillViewport="true"
                    android:padding="12dp"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:scrollbarThumbVertical="@drawable/scrollbar_thumb_orange"
                    android:scrollbarTrackVertical="@drawable/scrollbar_track_gray"
                    android:scrollbarStyle="outsideInset"
                    android:nestedScrollingEnabled="true"
                    android:focusableInTouchMode="true"
                    android:overScrollMode="ifContentScrolls">

                    <TextView
                        android:id="@+id/stepsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_sans_light"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/black_900"
                        android:textSize="15sp" />
                </ScrollView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- NOTE: deleteButton removed as requested -->

</androidx.constraintlayout.widget.ConstraintLayout>