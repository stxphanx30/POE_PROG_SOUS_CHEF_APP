<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <!-- Title + step -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/createrecipe"
            android:layout_width="142dp"
            android:layout_height="33dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/dm_sans_bold"
            android:gravity="center"
            android:text="@string/title_pantry"
            android:textColor="#FE8417"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- Top button bar -->
    <LinearLayout
        android:id="@+id/buttonBar2"
        style="?android:attr/buttonBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnplanner"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="119dp"
            android:layout_height="33dp"
            android:background="@drawable/rectangle_111"
            android:fontFamily="@font/dm_sans_bold"
            android:text="@string/btn_planner"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnnext2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="119dp"
            android:layout_height="33dp"
            android:background="@drawable/rectangle_112"
            android:fontFamily="@font/dm_sans_bold"
            android:text="@string/btn_pantry"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/buttonBar2"
        app:layout_constraintBottom_toTopOf="@id/buttonBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="16dp"
            android:background="@color/white"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/step11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/pantry_instructions_title"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/step12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="@string/pantry_instructions_subtitle"
                android:textColor="@color/sous_chef_orange"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingTop="8dp"
                android:paddingEnd="5dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/step_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/pantry_step_1"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/step_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/pantry_step_2"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/step_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/pantry_step_3"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/step_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/pantry_step_4"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/step_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/pantry_step_5"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/step_imag2e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/pantry_step_1"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp" />

            </LinearLayout>


            <!-- Ingredients box -->
            <LinearLayout
                android:id="@+id/boxIngredients1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ingredients_box"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:padding="0dp">

                <TextView
                    android:id="@+id/labelIngredients1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:text="@string/label_have"
                    android:textColor="@color/sous_chef_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:alpha="0.6"/>

                <ScrollView
                    android:id="@+id/scrollIngredients1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:fillViewport="true"
                    android:padding="12dp"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:scrollbarThumbVertical="@drawable/scrollbar_thumb_orange"
                    android:scrollbarTrackVertical="@drawable/scrollbar_track_gray"
                    android:scrollbarStyle="outsideInset">

                    <TextView
                        android:id="@+id/tvIngredients1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_900"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"/>
                </ScrollView>
            </LinearLayout>
            <!-- Ingredients box -->
            <LinearLayout
                android:id="@+id/boxIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ingredients_box"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:padding="0dp">

                <TextView
                    android:id="@+id/labelIngredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_bold"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:text="@string/label_to_get"
                    android:textColor="@color/sous_chef_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:alpha="0.6"/>

                <ScrollView
                    android:id="@+id/scrollIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:fillViewport="true"
                    android:padding="12dp"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:scrollbarThumbVertical="@drawable/scrollbar_thumb_orange"
                    android:scrollbarTrackVertical="@drawable/scrollbar_track_gray"
                    android:scrollbarStyle="outsideInset">

                    <TextView
                        android:id="@+id/tvIngredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_900"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"/>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom button bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonBar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="?android:attr/buttonBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Left icon -->
        <ImageView
            android:id="@+id/iconNotifications"
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/group_25__1_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Right icon -->
        <ImageView
            android:id="@+id/iconNotifications2"
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/pluss"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
